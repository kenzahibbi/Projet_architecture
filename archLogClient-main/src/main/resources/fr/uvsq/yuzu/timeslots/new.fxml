<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>

<?import java.lang.String?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.uvsq.yuzu.controllers.timeslots.TimeslotsNewController">
   <children>
      <Label text="Création d'un créneau" />
      
      <Label fx:id="error" text="" textFill="Red" />

      <Label text="Horaire de début" />
      
      <ComboBox fx:id="beginTime" promptText="Select" />
      
      <Label text="Horaire de fin" />
      
      <ComboBox fx:id="endTime" promptText="Select" />
      
      <Label text="Date" />
      
      <DatePicker fx:id="date" />
      
      <Button text="Annuler" onAction="#goToTimeslotIndex"/>
      
      <Button text="Créer" onAction="#createTimeslot"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
